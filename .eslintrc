{
  "root": true,
  "env": {
    "browser": true
  },
  "extends": [
    "@scaleway/react/typescript"
  ],
  "parserOptions": {
    "project": [
      "tsconfig.json"
    ]
  },
  "plugins": [
    "@emotion"
  ],
  "rules": {
    // Import
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/__stories__/**/*",
          "**/__tests__/**/*",
          "rollup.config.mjs"
        ]
      }
    ],
    // emotion
    "@emotion/styled-import": "error",
    "@emotion/no-vanilla": "error",
    "@emotion/import-from-emotion": "error",
    "@emotion/syntax-preference": [
      "error",
      "string"
    ]
  },
  "overrides": [
    {
      "env": {
        "jest": true
      },
      "files": [
        "**/__stories__/**/*.{ts,tsx}",
        "**/__tests__/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-console": "off",
        "no-alert": "off",
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off"
      }
    }
  ]
}
